#	calledInLine: 161
#....................................................................................................................................................#
	my ($chunk_info_hsh_ref, $result_bed_dir, $result_log_dir, $paramTag, $result_tmp_dir, $rm_tmp_file, $tabix_bin) = @_;
	
	my $out_bed_hsh_ref = {
		'collapse_ctss' => "$result_bed_dir/$paramTag.aggregate.collapse.ctss.bed.gz",
		'unencoded_G_collapse_ctss' => "$result_bed_dir/$paramTag.aggregate.unencoded_G.collapse.ctss.bed.gz",
	};
	
	foreach my $ctss_type (keys %{$out_bed_hsh_ref}) {
