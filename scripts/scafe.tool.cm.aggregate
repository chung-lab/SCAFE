sub poolLibCTSSPerChunk {
#....................................................................................................................................................#
#	subroutineCategory: unassigned
#	dependOnSub: reportAndLogStatus|952
#	appearInSub: processPerChunk|801
#	primaryAppearInSection: >none
#	secondaryAppearInSection: 4_convert|157
#	input: $bedtools_bin, $bgzip_bin, $bgzip_sort_thread, $chunk_info_hsh_ref, $chunk_num, $lib_info_hsh_ref, $tabix_bin
#	output: 
#	toCall: &poolLibCTSSPerChunk($lib_info_hsh_ref, $chunk_info_hsh_ref, $chunk_num, $bgzip_sort_thread, $tabix_bin, $bedtools_bin, $bgzip_bin);
#	calledInLine: 846
#....................................................................................................................................................#
	my ($lib_info_hsh_ref, $chunk_info_hsh_ref, $chunk_num, $bgzip_sort_thread, $tabix_bin, $bedtools_bin, $bgzip_bin) = @_;

	my $tabix_region_str = $chunk_info_hsh_ref->{$chunk_num}{'tabix_region_str'};
	#---[2021/08/22 14:45] tabix_region_str has a 1 based start position to prevent overlapping of the chunk junction
	foreach my $ctss_type (qw/collapse_ctss unencoded_G_collapse_ctss/) {
		my $chunk_unsort_ctss = $chunk_info_hsh_ref->{$chunk_num}{'ctss'}{'unsort'}{$ctss_type};
		my $chunk_sorted_ctss = $chunk_info_hsh_ref->{$chunk_num}{'ctss'}{'sorted'}{$ctss_type};
		my $num_read = 0;
		open UNSORT, ">$chunk_unsort_ctss";
		foreach my $libID (keys %{$lib_info_hsh_ref}) {
			&reportAndLogStatus("pooling $libID in chunk $chunk_num $ctss_type", 10, "\n");#->952
			my $tabix_ctss_path = $lib_info_hsh_ref->{$libID}{'tabix_ctss_path'}{$ctss_type};
			open (TABIX, "$tabix_bin $tabix_ctss_path $tabix_region_str |");
			while (<TABIX>) {
				print UNSORT $_;
				$num_read++;
			}
			close TABIX;
		}
		close UNSORT;
		
		&reportAndLogStatus("sorting and merging $ctss_type in chunk $chunk_num.", 10, "\n");#->952
		if ($num_read > 0) {
			system "sort --parallel $bgzip_sort_thread -k2,2n -k6,6 $chunk_unsort_ctss | $bedtools_bin merge -d -1 -s -c 4,5,6 -o sum,sum,distinct | $bgzip_bin -@ $bgzip_sort_thread >$chunk_sorted_ctss";
		} else {
			system "$bgzip_bin < /dev/null >$chunk_sorted_ctss";
		}
		system "rm $chunk_unsort_ctss";
	}

	return ();
}
